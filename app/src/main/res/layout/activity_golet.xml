<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Golet">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="375dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/golet"
        android:layout_marginTop="35dp"
        />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="373dp"
        android:layout_height="270dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.149"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="375dp"
            android:layout_height="250dp"
            android:scrollbars="vertical"
            android:text="Çalışma alanında tespit edilen drenaj sorununun yüksek yeraltı suyu ile çözülmesi ve yağmur sularının toplanması amaçlanmıştır.
Kampüs sulama sistemine katkı sağlaması planlanan bu göletin, çevresinde oluşturulan doğal sazlar ile kampüs girişindeki görsel peyzaj kalitesini artıracağı düşünülmektedir.
Gölet ayrıca kampüs sakinlerinin yanı sıra Bartın halkına da hizmet etmektedir."
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />
    </ScrollView>

    <Button
        android:id="@+id/button8"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#58A63C"
        android:text="Rota Oluştur"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>