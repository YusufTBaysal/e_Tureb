<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SokMarket">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="375dp"
        android:layout_height="350dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.138">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="375dp"
        android:layout_height="500dp"
        android:gravity="center"
        android:text="ŞOK Marketler Ticaret A.Ş., Türkiye merkezli bir indirim marketleri zinciridir. Şirket, 1995 yılında Migros tarafından kurulmuş olup Ağustos 2011 tarihinde Yıldız Holding şirketlerinden Gözde Girişim liderliğinde bir konsorsiyum tarafından satın alındı. Şirketin merkezi İstanbul'un Üsküdar ilçesinde yer almaktadır"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />
    </ScrollView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="375dp"
        android:layout_height="200dp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/sokmarket" />


    <Button
        android:id="@+id/button3"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#58A63C"
        android:text="Rota Oluştur"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>