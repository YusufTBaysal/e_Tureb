<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Yemeicme">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="375dp"
        android:layout_height="200dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:onClick="komagene"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/komagene"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="42dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="375dp"
        android:layout_height="75dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginLeft="8dp"
        android:backgroundTint="#DC8282"
        android:onClick="komagene"
        app:cornerRadius="0dp"
        android:singleLine="false"
        android:text="Komagene\nÇeşit : Çiğ Köfte\nMesafe : "
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="176dp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="375dp"
        android:layout_height="200dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        android:onClick="sokMarket"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/sokmarket" />

    <Button
        android:id="@+id/button2"
        android:layout_width="375dp"
        android:layout_height="75dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginLeft="8dp"
        android:backgroundTint="#E8D84E"
        android:onClick="sokMarket"
        android:singleLine="false"
        android:text="Şok Market\nÇeşit : Market\nMesafe : "
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="176dp" />
</GridLayout>